<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_color_picker_sheet"
    android:background="@android:color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/imb_dark_blue"
        style="@style/ColorSheetButtons"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/circle_dark_blue"
        app:layout_constraintEnd_toStartOf="@+id/imb_burnt_orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imb_burnt_orange"
        style="@style/ColorSheetButtons"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/circle_burnt_orange"
        app:layout_constraintEnd_toStartOf="@+id/imb_green"
        app:layout_constraintStart_toEndOf="@+id/imb_dark_blue"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imb_green"
        style="@style/ColorSheetButtons"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/circle_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imb_burnt_orange"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        style="@style/ColorSheetButtons"
        android:id="@+id/imb_red"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintEnd_toStartOf="@+id/imb_dark_lime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imb_dark_blue"
        android:src="@drawable/circle_red" />

    <ImageButton
        style="@style/ColorSheetButtons"
        android:id="@+id/imb_dark_lime"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintEnd_toStartOf="@+id/imb_light_blue"
        app:layout_constraintStart_toEndOf="@+id/imb_red"
        app:layout_constraintTop_toBottomOf="@+id/imb_burnt_orange"
        android:src="@drawable/circle_lime" />


    <ImageButton
        style="@style/ColorSheetButtons"
        android:id="@+id/imb_light_blue"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imb_dark_lime"
        app:layout_constraintTop_toBottomOf="@+id/imb_green"
        android:src="@drawable/circle_light_blue" />

    <ImageButton
        style="@style/ColorSheetButtons"
        android:id="@+id/imb_mauve"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintEnd_toStartOf="@+id/imb_brown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imb_red"
        android:src="@drawable/circle_mauve" />

    <ImageButton
        style="@style/ColorSheetButtons"
        android:id="@+id/imb_brown"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintEnd_toStartOf="@+id/imb_teal"
        app:layout_constraintStart_toEndOf="@id/imb_mauve"
        app:layout_constraintTop_toBottomOf="@+id/imb_dark_lime"
        android:src="@drawable/circle_brown" />


    <ImageButton
        style="@style/ColorSheetButtons"
        android:id="@+id/imb_teal"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imb_brown"
        app:layout_constraintTop_toBottomOf="@+id/imb_light_blue"
        android:src="@drawable/circle_teal" />



</androidx.constraintlayout.widget.ConstraintLayout>