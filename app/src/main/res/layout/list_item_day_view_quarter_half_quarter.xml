<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:id="@+id/list_item_root"
    >

    <include
        layout="@layout/view_hour_block"
        android:id="@+id/div_hour_block"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/div_first_quarter"

        android:layout_width="0dp"
        android:layout_height="22dp"

        app:layout_constraintBottom_toTopOf="@+id/div_second_half"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/div_hour_block"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imv_first_task_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@color/red" />

        <TextView
            android:id="@+id/lbl_first_task_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:alpha="0.87"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:paddingStart="64dp"
            android:paddingEnd="64dp"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12PM BREAK" />

        <ImageView
            android:id="@+id/imv_first_task_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:alpha="0.87"
            android:src="@drawable/ic_break"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imv_first_task_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hour_block_grey_rounded_bg" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/div_second_half"

        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toTopOf="@+id/div_third_quarter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/div_hour_block"
        app:layout_constraintTop_toBottomOf="@id/div_first_quarter">

        <ImageView
            android:id="@+id/imv_second_task_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@color/red" />

        <TextView
            android:id="@+id/lbl_second_task_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:maxLines="1"
            android:paddingStart="64dp"
            android:paddingEnd="64dp"
            android:ellipsize="end"
            android:alpha="0.87"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            tools:text="12PM BREAK"
            />

        <ImageView
            android:id="@+id/imv_second_task_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:alpha="0.87"
            android:src="@drawable/ic_break"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imv_second_task_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hour_block_grey_rounded_bg" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/div_third_quarter"

        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/div_hour_block"
        app:layout_constraintTop_toBottomOf="@+id/div_second_half">

        <ImageView
            android:id="@+id/imv_third_task_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@color/red" />

        <TextView
            android:id="@+id/lbl_third_task_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:alpha="0.87"
            android:maxLines="1"
            android:paddingStart="64dp"
            android:paddingEnd="64dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12PM BREAK" />

        <ImageView
            android:id="@+id/imv_third_task_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:alpha="0.87"
            android:src="@drawable/ic_break"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imv_third_task_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hour_block_grey_rounded_bg" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>